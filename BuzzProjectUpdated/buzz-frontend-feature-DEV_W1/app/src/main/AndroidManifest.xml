<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.buzz.project" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BuzzProject"
        tools:targetApi="31" >
        <activity
            android:name=".dashboard.ui.DashboardScreenActivity"
            android:exported="false" />
        <activity
            android:name=".splash_screens.LoginEndSplashScreenActivity"
            android:exported="false" />
        <activity
            android:name=".ui_activities.ImageScreenActivity"
            android:exported="true" />
        <activity
            android:name=".ui_activities.GenderScreenActivity"
            android:exported="false" />
        <activity
            android:name=".ui_activities.CalendarScreenActivity"
            android:exported="false" />
        <activity
            android:name=".ui_activities.NameScreenActivity"
            android:exported="false" />
        <activity
            android:name=".otp_authentication_login.ui.LoginOtpActivity"
            android:exported="false" />
        <activity
            android:name=".welcome_back.ui.WelcomeBackActivity"
            android:exported="false" />
        <activity
            android:name="com.buzz.project.otp_authentication_signup.ui.SignUpOtpActivity"
            android:exported="false"
            android:parentActivityName="com.buzz.project.welcome.ui.WelcomeActivity" />
        <activity
            android:name="com.buzz.project.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.buzz.project.welcome.ui.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name="com.buzz.project.splash_screens.BuzzSplashScreen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>